<Window x:Class="SpeedwayDatabaseView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpeedwayDatabaseView"
        xmlns:viewModel="clr-namespace:SpeedwayDatabaseViewModel;assembly=SpeedwayDatabaseViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="500">
    <Window.DataContext>
        <viewModel:RidersViewModel/>
    </Window.DataContext>
    <Window.InputBindings>
        <KeyBinding Key="{Binding KeyPressedCommand.GetKey}" Command="{Binding KeyPressedCommand}"/>
    </Window.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <TabControl Grid.Row="0" Grid.ColumnSpan="2">
            <TabItem Header="Riders">
                <DataGrid 
                    x:Name="RiderDataGrid" 
                    ItemsSource="{Binding Riders}"
                    SelectedItem="{Binding SelectedRider}"
                    CanUserAddRows="False"
                    CanUserReorderColumns="False"
                    CanUserResizeColumns="False"
                    CanUserResizeRows="False">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Loaded">
                            <i:InvokeCommandAction Command="{Binding LoadTableCommand}"/>
                        </i:EventTrigger>

                        <i:EventTrigger EventName="AddingNewItem">
                            <i:InvokeCommandAction Command="{Binding AddItem}"/>
                        </i:EventTrigger>
                        
                        <i:EventTrigger EventName="KeyDown">
                            <i:InvokeCommandAction Command="{Binding KeyPressedCommand}"></i:InvokeCommandAction>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </DataGrid>
            </TabItem>
        </TabControl>
        <Button Grid.Row="1" Grid.Column="0" x:Name="AddRowButton" Content="Add Row" Command="{Binding AddRowCommand}"/>
        <Button Grid.Row="1" Grid.Column="1" x:Name="DeleteRowButton" Content="Delete Selected Row" Command="{Binding DeleteRowCommand}"/>
    </Grid>
</Window>
